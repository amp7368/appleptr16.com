{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "extra": {
            "type": "array",
            "items": { "type": "string" }
        },
        "comments": {
            "type": "array",
            "items": { "type": "string" }
        },
        "links": {
            "type": "array",
            "items": { "$ref": "./tool-link.schema.json" }
        },
        "tags": {
            "type": "array",
            "items": {
                "enum": [
                    "LANGUAGE",
                    "LIBRARY",
                    "ENVIRONMENT",
                    "UTILITY",
                    "IDE",
                    "SERVICE",
                    "FRAMEWORK",
                    "OTHER"
                ]
            }
        }
    }
}
